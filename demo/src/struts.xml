<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.ui.theme" value="simple" />
	<package name="struts2" extends="struts-default" namespace="">
		<!-- <interceptors> <interceptor name="online" class="com.netshot.util.OnlineInterceptor" 
			/> <interceptor-stack name="cusmStack"> <interceptor-ref name="online" /> 
			<interceptor-ref name="defaultStack" /> </interceptor-stack> </interceptors> -->
		<!-- <default-interceptor-ref name="cusmStack" /> -->
		<global-results>
			<result name="logon" type="redirect">/jsp/login.jsp</result>
		</global-results>
		<action name="logon" class="com.netshot.action.LoginAction">
			<result name="success">/jsp/welcome.jsp</result>
			<result name="fail">/jsp/login.jsp</result>
		</action>
		<action name="logout" class="com.netshot.action.LoginAction"
			method="logout">
			<result name="success">/jsp/login.jsp</result>
			<result name="fail">/jsp/login.jsp</result>
		</action>
		<action name="register" class="com.netshot.action.LoginAction"
			method="register">
			<result name="success">/jsp/login.jsp</result>
			<result name="fail">/jsp/register.jsp</result>
		</action>
	</package>
</struts>    
